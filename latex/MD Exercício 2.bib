	urldate = {2023-05-09},
	author = {Nascimento, José Leonardo Ribeiro},
	month = sep,
	year = {2022},
	note = {Accepted: 2022-12-01T16:45:29Z
Publisher: Escola Nacional de Administração Pública (Enap)},
